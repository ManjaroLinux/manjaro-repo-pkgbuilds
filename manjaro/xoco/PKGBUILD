# manjaro-x11
# Maintainer: ying <Jinoto Systems>
# Contributor: ying <Jinoto Systems>

pkgname=xoco
pkgver=0.1.5
pkgrel=1
pkgdesc="Xorg configuration script"
arch=("any")
url="http://manjarolinux.org"
license=('GPL2')
depends=('coreutils' 'bash' 'findutils' 'xorg-xrandr' 'xorg-server')
source=(http://manjarolinux.org/src/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
cd "$srcdir/"

mkdir -p ${pkgdir}/etc
mkdir -p ${pkgdir}/usr/bin
cp -fr ${srcdir}/xoco ${pkgdir}/usr/bin/xoco
cp -fr ${srcdir}/xoco.d ${pkgdir}/etc/xoco.d
rm -fr ${pkgdir}/etc/xoco.d/*~
rm -fr ${pkgdir}/usr/bin/*~
chmod o+=rx ${pkgdir}/usr/bin/xoco
chmod g+=rx ${pkgdir}/usr/bin/xoco
}


md5sums=('2b175e8d115c207c316f10e4b746a515')
